<UserControl x:Class="ModernDiagnosticCenter.Pages.Settings.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <Label Content="Name" HorizontalAlignment="Left" Margin="16,39,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="name" HorizontalAlignment="Left" Height="23" Margin="71,39,0,0" TextWrapping="Wrap" Text="Admin" VerticalAlignment="Top" Width="175"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Left" Margin="71,67,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="0,73,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <Button Content="Log In" HorizontalAlignment="Left" Margin="147,111,0,0" VerticalAlignment="Top" Width="99" FontWeight="Bold" Click="Button_Click" IsDefault="True"/>
    </Grid>
</UserControl>
